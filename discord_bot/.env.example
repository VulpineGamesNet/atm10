# Discord Bot Configuration
# Copy this file to .env and fill in your values

# =============================================================================
# DISCORD SETTINGS (Required)
# =============================================================================

# Your Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your_bot_token_here

# The Discord channel ID where chat will be synced
# Right-click channel -> Copy ID (enable Developer Mode in Discord settings)
DISCORD_CHANNEL_ID=123456789012345678

# Your Discord server (guild) ID (optional)
DISCORD_GUILD_ID=123456789012345678

# =============================================================================
# MINECRAFT RCON SETTINGS (Required)
# =============================================================================

# Minecraft server RCON host
# Use "host.docker.internal" when running in Docker on the same machine
# Use "localhost" when running directly on the same machine
# Use the actual IP/hostname for remote servers
RCON_HOST=host.docker.internal

# Minecraft server RCON port (default: 25575)
RCON_PORT=25575

# Minecraft server RCON password (set in server.properties)
RCON_PASSWORD=your_rcon_password_here

# =============================================================================
# SERVER INFO
# =============================================================================

# Path to the server stats JSON file written by KubeJS
# When using Docker, this should match the mount path in docker-compose.yml
STATS_FILE=/app/server_data/server_stats.json

# Server name displayed in Discord
SERVER_NAME=ATM10 Server

# =============================================================================
# OPTIONAL SETTINGS
# =============================================================================

# How often to update the Discord channel topic (seconds)
TOPIC_UPDATE_INTERVAL=60

# How often to read the stats file (seconds)
STATS_CHECK_INTERVAL=5

# Maximum message length to send to Minecraft
MAX_MESSAGE_LENGTH=256
